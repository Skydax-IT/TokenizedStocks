# Environment Variables for Tokenized Stocks Dashboard
# Copy this file to .env.local and fill in your values

# Beehiiv Newsletter API (Optional)
# Get your API key from: https://app.beehiiv.com/settings/api_keys
BEEHIIV_API_KEY=your_beehiiv_api_key_here
BEEHIIV_PUBLICATION_ID=your_publication_id_here

# API Endpoints (Optional - for development/testing)
# These can be overridden for testing purposes
KRAKEN_API_URL=https://api.kraken.com
COINGECKO_API_URL=https://api.coingecko.com

# API Keys (Optional - for future use if APIs require authentication)
KRAKEN_API_KEY=your_kraken_api_key_here
COINGECKO_API_KEY=your_coingecko_api_key_here

# Environment
NODE_ENV=development

# Deployment (Optional)
# Update these URLs to match your deployment domain
NEXT_PUBLIC_SITE_URL=https://your-domain.vercel.app
